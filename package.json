{
  "name": "earthstar",
  "version": "6.2.1",
  "description": "A distributed, syncable key-value store",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/cinnamon-bun/earthstar.git"
  },
  "browser": {
    "./build/index.js": "./build/index.browser.js",
    "./build/storeSqlite.js": false,
    "tap": "tape"
  },
  "scripts": {
    "clean": "rm -rf build/* .nyc_output coverage browserify-test-bundle",
    "toc": "./update-table-of-contents.sh",
    "build": "tsc",
    "build-standalone": "mkdir -p dist && browserify --standalone earthstar build/index.browser.js > dist/earthstar.js && terser --compress -- dist/earthstar.js > dist/earthstar.min.js && ls -la dist",
    "browserify-for-karma": "mkdir -p browserify-test-bundle && browserify build/test/detRandom.test.js > browserify-test-bundle/bundle.js",
    "karma-start": "karma start",
    "test-in-browser": "npm run clean && npm run build && npm run browserify-for-karma && npm run karma-start",
    "watch-test": "onchange --initial --kill --delay 1000 src/*.ts -- npm run build-and-test",
    "start": "node build/main.js",
    "prettier": "prettier --write src/*",
    "test": "tap -Rspecy --jobs=1 build/test/*.test.js",
    "test-coverage": "npm test -- --coverage-report=lcov",
    "test-bus": "tap -Rspecy --jobs=1 build/test/bus.test.js",
    "test-crypto": "tap -Rspecy --jobs=1 build/test/crypto.test.js",
    "test-detRandom": "tap -Rspecy --jobs=1 build/test/detRandom.test.js",
    "test-emitter": "tap -Rspecy --jobs=1 build/test/emitter.test.js",
    "test-extras": "tap -Rspecy --jobs=1 build/test/extras.test.js",
    "test-helpers": "tap -Rspecy --jobs=1 build/test/helpers.test.js",
    "test-query": "tap -Rspecy --jobs=1 build/test/query.test.js",
    "test-storageAsync": "tap -Rspecy --jobs=1 build/test/storageAsync.test.js",
    "test-syncWithChannels": "tap -Rspecy --jobs=1 build/test/syncWithChannels.test.js",
    "test-syncer1": "tap -Rspecy --jobs=1 build/test/syncer1.test.js",
    "test-validator": "tap -Rspecy --jobs=1 build/test/validator.es4.test.js",
    "typedoc": "typedoc --out typedoc/ --theme minimal --name Earthstar --includeVersion --readme none src",
    "benchmark": "mkdir -p benchmark-results && node --expose-gc build/test/benchmark.js | tee benchmark-results/benchmark.txt",
    "build-and-test": "npm run build && npm run test",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "author": "Cinnamon <cinnamon_npm@fastmail.com>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/bencode": "^2.0.0",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^14.14.10",
    "@types/tap": "^14.10.1",
    "@types/tape": "^4.13.0",
    "browserify": "^16.5.2",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "^3.1.0",
    "karma-tap": "^4.2.0",
    "onchange": "^7.1.0",
    "prettier": "^2.2.1",
    "tap": "^14.11.0",
    "tape": "^5.0.1",
    "terser": "^5.5.1",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@types/better-sqlite3": "^5.4.1",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/multibase": "^0.6.0",
    "bencode": "^2.0.1",
    "better-sqlite3": "^7.1.1",
    "chalk": "^4.1.0",
    "chloride": "^2.3.0",
    "concurrency-friends": "^0.2.0",
    "fast-equals": "^2.0.0",
    "isomorphic-fetch": "^2.2.1",
    "lodash.debounce": "^4.0.8",
    "multibase": "^2.0.0",
    "tslib": "^2.0.3"
  }
}
