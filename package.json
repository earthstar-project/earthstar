{
  "name": "earthstar",
  "version": "6.8.5",
  "description": "A distributed, syncable key-value database",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/earthstar-project/earthstar.git"
  },
  "author": "Cinnamon <cinnamon_npm@fastmail.com>",
  "license": "AGPL-3.0",
  "browser": {
    "./build/index.js": "./build/index.browser.js",
    "./build/storeSqlite.js": false,
    "tap": "tape"
  },
  "scripts": {
    "clean": "rm -rf build/* .nyc_output coverage browserify-test-bundle/bundle.js",
    "toc": "./update-table-of-contents.sh",
    "depchart": "depchart `find src | grep .ts` --exclude `find src | grep '/test/\\|/util/\\|/temp/'` src/decls.d.ts --rankdir LR --node_modules separated --open",
    "build": "tsc",
    "build-standalone": "mkdir -p dist && browserify --standalone earthstar build/index.browser.js > dist/earthstar.js && terser --compress -- dist/earthstar.js > dist/earthstar.min.js && ls -la dist",
    "browserify-for-karma": "mkdir -p browserify-test-bundle && browserify build/test/storageMemory.test.js > browserify-test-bundle/bundle.js",
    "karma-start": "karma start",
    "test-in-browser-with-karma": "npm run clean && npm run build && npm run browserify-for-karma && npm run karma-start",
    "test-in-browser-run": "npm run clean && npm run build && npm run browserify-for-karma && cat browserify-test-bundle/bundle.js | browser-run",
    "watch-test": "onchange --initial --kill --delay 1000 src/*.ts -- npm run build-and-test",
    "start": "node build/main.js",
    "prettier": "echo we are not actually using this - prettier --write src/*",
    "test": "tap --timeout=120 build/test/*.test.js",
    "test-verbose": "npm test -- -Rspecy --jobs=1",
    "test-coverage": "npm test -- --coverage-report=lcov",
    "test-bus": "tap -Rspecy --jobs=1 build/test/bus.test.js",
    "test-crypto": "tap -Rspecy --jobs=1 build/test/crypto.test.js",
    "test-detRandom": "tap -Rspecy --jobs=1 build/test/detRandom.test.js",
    "test-emitter": "tap -Rspecy --jobs=1 build/test/emitter.test.js",
    "test-extras": "tap -Rspecy --jobs=1 build/test/extras.test.js",
    "test-helpers": "tap -Rspecy --jobs=1 build/test/helpers.test.js",
    "test-query": "tap -Rspecy --jobs=1 build/test/query.test.js",
    "test-queryHelpers": "tap -Rspecy --jobs=1 build/test/queryHelpers.test.js",
    "test-storageMemory": "tap -Rspecy --jobs=1 --timeout=120 build/test/storageMemory.test.js",
    "test-storageSqlite": "tap -Rspecy --jobs=1 --timeout=120 build/test/storageSqlite.test.js",
    "test-syncWithChannels": "tap -Rspecy --jobs=1 build/test/syncWithChannels.test.js",
    "test-syncer1": "tap -Rspecy --jobs=1 build/test/syncer1.test.js",
    "test-syncer2": "tap -Rspecy --jobs=1 build/test/syncer2.test.js",
    "test-validator": "tap -Rspecy --jobs=1 build/test/validator.es4.test.js",
    "typedoc": "typedoc --out typedoc/ --theme minimal --name Earthstar --includeVersion --readme none src",
    "benchmark": "mkdir -p benchmark-results && node --expose-gc build/test/benchmark.js | tee benchmark-results/benchmark.txt",
    "build-and-test": "npm run build && npm run test",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "devDependencies": {
    "@types/bencode": "^2.0.0",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^16.4.3",
    "@types/tap": "^14.10.3",
    "@types/tape": "^4.13.0",
    "browser-run": "^9.0.0",
    "browserify": "^17.0.0",
    "depchart": "^1.2.0",
    "karma": "^6.3.2",
    "karma-chrome-launcher": "^3.1.0",
    "karma-tap": "^4.2.0",
    "onchange": "^7.1.0",
    "prettier": "^2.3.0",
    "tap": "^14.11.0",
    "tape": "^5.0.1",
    "terser": "^5.7.0",
    "typedoc": "^0.20.36",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "@types/better-sqlite3": "^5.4.1",
    "@types/isomorphic-fetch": "0.0.35",
    "bencode": "^2.0.1",
    "better-sqlite3": "^7.4.0",
    "chalk": "^4.1.0",
    "chloride": "^2.3.0",
    "concurrency-friends": "^1.0.1",
    "fast-equals": "^2.0.3",
    "isomorphic-fetch": "^2.2.1",
    "lodash.debounce": "^4.0.8",
    "rfc4648": "^1.5.0",
    "tslib": "^2.2.0"
  }
}
